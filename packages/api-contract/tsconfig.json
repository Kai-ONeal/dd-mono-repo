{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2015", // Or higher (e.g., ES2020 or ESNext)
    "module": "CommonJS", // Use "ESNext" if you need ES modules
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
